    <form action="/admin/add/product" method="post">
      <button type="submit" class="btn btn-danger btn-block gradient-custom-4 text-white">ADD NEW PRODUCT</button>
    </form>
  </div> -->

          <!-- Display messages -->
          <p class="text-center" id="msg" style="
    font-family: Poppins;
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0em;
    color: #44db74;
    ">
            <%= %>
          </p>
  </main>

  <script>
    $(document).ready(function () {
      $('#order').DataTable();
    });
  </script>



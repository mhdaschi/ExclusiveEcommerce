                    <li class="page-item">
                        <button id="prev-button" class="page-link" disabled>&laquo; Previous</button>
                    </li>
                    <li class="page-item">
                        <button id="next-button" class="page-link" disabled>Next &raquo;</button>
                    </li>
                </ul>
            </nav>


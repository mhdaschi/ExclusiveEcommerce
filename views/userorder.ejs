<%- include('header') %>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var currentPage = 1;
        var itemsPerPage = 2;
        var orderCards = document.querySelectorAll(".order-card");
        var totalPages = Math.ceil(orderCards.length / itemsPerPage);

        function showPage(page) {
            currentPage = page;
            var start = (page - 1) * itemsPerPage;
            var end = start + itemsPerPage;

            orderCards.forEach(function (card, index) {
                if (index >= start && index < end) {
                    card.style.display = "block";
                } else {
                    card.style.display = "none";
                }
            });
        }

        function updatePagination() {
            var prevButton = document.getElementById("prev-button");
            var nextButton = document.getElementById("next-button");

            prevButton.disabled = currentPage === 1;
            nextButton.disabled = currentPage === totalPages;
        }

        showPage(currentPage);
        updatePagination();

        document.getElementById("prev-button").addEventListener("click", function () {
            if (currentPage > 1) {
                showPage(currentPage - 1);
                updatePagination();
            }
        });

        document.getElementById("next-button").addEventListener("click", function () {
            if (currentPage < totalPages) {
                showPage(currentPage + 1);
                updatePagination();
            }
        });
    });
</script>

<div class="container">
    <% if (orderData.length > 0) { %>
        <h1 class="text-center mb-4 mt-3">Your Orders <i class="fa fa-shopping-bag"></i></h1>
    <% } %>

    <div class="row">
        <% if (!orderData || orderData.length === 0) { %>
            <h1 class="text-center mb-4 mt-3">You have no orders <i class="fa fa-shopping-bag"></i></h1>
            <div class="text-center">
                <img src="/images/noorder.png" class="img-fluid"><br>
                <a href="/user/home" class="btn rounded-pill border-success text-center my-3 text-success w-25">Back To Shopping</a>
            </div>
        <% } else { %>
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    <li class="page-item">
                        <button id="prev-button" class="page-link" disabled>&laquo; Previous</button>
                    </li>
                    <li class="page-item">
                        <button id="next-button" class="page-link" disabled>Next &raquo;</button>
                    </li>
                </ul>
            </nav>

            <% orderData.forEach((order) => { %>
                <div class="col-lg-12">
                    <div class="order-card mb-4 shadow">
                        <h4 class="text-satrt">Order #<%- order.oid %></h4>
                        <div class="progress">
                            <!-- Progress bar based on order status ... -->
                        </div>

                        <div class="mt-3 text-end">
                            <p class="order-details">Date: <strong><%= order.orderAdded %></strong></p>
                        </div>

                        <% order.orderedproducts.forEach((product) => { %>
                            <div class="product-item mt-5">
                                <div class="row align-items-center">
                                    <div class="col-md-4">
                                        <img style="width: 150px; height: 150px;" src="/<%= product.image %>"
                                            alt="Product Image"
                                            class="order-image img-fluid <%= order.orderStatus ? '' : 'red-strikethrough' %>">
                                        <div class="text-center">
                                            <p class="order-details"><strong><%= product.orderedItem %></strong></p>
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <p class="order-details">Qty: <strong
                                                        class="<%= order.orderStatus ? '' : 'strike-red' %>">
                                                        <%= product.quantity %>
                                                    </strong></p>
                                            </div>
                                            <div class="col-md-6">
                                                <p class="order-details">Amount: <strong
                                                        class="<%= order.orderStatus ? '' : 'strike-red' %>">₹
                                                        <%= product.price %>
                                                    </strong></p>
                                                <p class="order-details">Item: <strong
                                                        class="<%= order.orderStatus ? '' : 'strike-red' %>">
                                                        <%= product.orderedItem %>
                                                    </strong></p>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <% if (order.orderStatus !== 'Delivered' && order.orderStatus !== 'Cancelled') { %>
                                                <button class="btn btn-danger mt-3 cancel-order-single" type="button"
                                                    data-order-id="<%- order._id %>"
                                                    data-product-name="<%- product.orderedItem %>"
                                                    data-product-quantity="<%- product.quantity %>"
                                                    data-product-price="<%- product.productsPrice %>">
                                                    <i class="fas fa-times-circle"></i> Cancel Product
                                                </button>
                                            <% } %>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        <% }) %>

                        <div class="">
                            <p class="order-details float-end">Summary:<strong> ₹<%= order.orderTotalPrice %></strong></p>
                        </div>

                        <div class="order-status-bar mt-3 fw-bold">
                            <!-- Order status bar ... -->
                        </div>

                        <div class="text-end">
                            <% if (order.orderStatus === 'Delivered' || order.orderStatus === 'Shipped') { %>
                                <button class="btn btn-warning return-order" data-order-id="<%- order._id %>"
                                    data-order-price="<%= order.totalPrice %>">
                                    <i class="fas fa-undo-alt"></i> Return Order
                                </button>
                            <% } else if (order.orderStatus === 'Cancelled') { %>
                                <p class="text-danger fw-bold">You have cancelled this order</p>
                            <% } else { %>
                                <button class="btn btn-danger cancel-order" data-order-id="<%- order._id %>"
                                    <% if (order.orderStatus === 'Cancelled' || order.orderStatus === 'Returned') { %>hidden<% } %>>
                                    <i class="fas fa-times-circle"></i> Cancel Order
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
</div>

<%- include('footer') %>


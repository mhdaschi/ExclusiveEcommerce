<!DOCTYPE html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous" />
    <style>
        .navbar {
            background-color: #000;
            color: #fff;
            height: 80px;
            font-family: 'Inter', sans-serif;
            font-weight: bold;
            font-size: 24px;
        }
        .left-box {
            overflow: hidden;
        }
        .featured-image {
            height: 50vh;
            overflow: hidden;
        }
        .form-container {
            padding: 20px;
        }
        /* Set the width of the input and button to 100% */
        .form-group input,
        .form-group button {
            width: 100%;
        }
    </style>
</head>

<body>
    <header>
        <div class="navbar navbar-light w-100 h-25 p-2 border-bottom justify-content-sm-center  bg-black text-white ">
            <div class="navbar navbar-light border-bottom d-flex justify-content-around bg-white fixed-top " style="height:80px">
                <div style="font-family: 'Inter', sans-serif; font-weight:bold; font-size: 24px; color: #000000;">
                    Exclusive
                </div>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-6 left-box">
                <div class="featured-image">
                    <img src="/forgot.png" class="img-fluid" style="width: 100%" alt="hhhh" />
                </div>
            </div>
            <div class="col-md-6 form-container">
                <div class="col-md-12">
                    <h3 class="card-title text-center " style="font-family: Inter; font-size: 36px; font-weight: 500; line-height: 30px;">Change password</h3>
                    <h1 style="font-family: Poppins; font-size: 16px; font-weight: 400; line-height: 24px; letter-spacing: 0em; text-align: left;" class="mt-3">
                        You should check in on some of those fields below.
                    </h1>
                </div>
                <form action="/user/forgot/updatepass" method="POST" name="forgot" onsubmit="return validateForm()">
                    <div class="form-group">
                        <label for="exampleInputEmail1"></label>
                        <input
                            type="password"
                            name="ForgotPassword"
                            class="form-control border-bottom"
                            style="border: 0; box-shadow: none"
                            id="ForgotPassword"
                            aria-describedby="password"
                            placeholder="Enter Your New password "
                            required
                        />
                        <label for="exampleInputEmail1"></label>
                        <input
                            type="password"
                            name="ForgotRepeatpassword"
                            class="form-control border-bottom"
                            style="border: 0; box-shadow: none"
                            id="Repeatpassword"
                            aria-describedby="password"
                            placeholder="Repeat password "
                            required
                        />
                        <div id="password-validation-message" class="text-danger"></div>
                        <button
                            id="login-button"
                            type="submit"
                            class="btn btn-block text-center btn-danger bg-danger mt-3"
                            style="font-family: Poppins; font-size: 16px; font-weight: 500; line-height: 24px; letter-spacing: 0em; text-align: center;"
                        >
                        Confirm
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>

    <script>
        function validateForm() {
            var password = document.getElementById('ForgotPassword').value.trim();
            var repeatPassword = document.getElementById('Repeatpassword').value.trim();

            // Check if passwords match
            if (password !== repeatPassword) {
                document.getElementById('password-validation-message').innerText = 'Passwords do not match.';
                return false; // Prevent form submission
            }

            // Check if password meets the criteria
            var passwordRegex = /^(?=.*[0-9])(?=.*[!@#$%^&*])[a-zA-Z0-9!@#$%^&*]{8,}$/;
            if (!passwordRegex.test(password)) {
                document.getElementById('password-validation-message').innerText = 'Password must be at least 8 characters long and include numbers and special characters.';
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>
</body>

<%- include('footer')%>
</html>

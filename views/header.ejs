  .custom-button {
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: #000000; 
    border-radius: 0 0 20px 20px; 
    text-align: center;  
  }
  


   @media (min-width: 997px) {
    .custom-card{
      width: 300px;
      height: 300px;
    }
}
@media (max-width: 650px) {
  .nav-drop{
    position: absolute;
    top: 20px;
